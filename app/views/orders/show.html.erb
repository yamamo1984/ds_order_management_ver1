<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="-prototype__hedding">
        <%= @order.customer.company %>様
      </p>
       <p class="customer__hedding">
        <%= @order.customer.last_name + @order.customer.first_name %>
      </p>
      <%= link_to "by プロトタイプの投稿者", root_path, class: :prototype__user %>
      <%# プロトタイプの投稿者とログインしているユーザーが同じであれば以下を表示する %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_order_path(@order.id), method: :get, class: :prototype__btn %>
          <%= link_to "削除する", order_path(@order.id), method: :delete, class: :prototype__btn %>
        </div>
      <%# // プロトタイプの投稿者とログインしているユーザーが同じであれば上記を表示する %>
      <div class="prototype__image">
        <%#= image_tag "プロトタイプの画像" %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">注文詳細</p>
        </div>
        <div class="customer__detail">
          <P>注文者：</p><%= @order.customer.company %><%= @order.customer.last_name = @order.customer.first_name %>
        </div>
        <div class="customer__detail">
          <P>担当者名：</p><%= @order.customer.last_name + @order.customer.first_name %>
        </div>
        <div class="customer__detail">
          <P>購入者住所：</p> <P>〒</p><%= @order.customer.post_code %>
        </div>
          <div class="customer__detail">
            <P><%= @order.customer.place.name %></p>
            <P><%= @order.customer.city %></p>
            <P><%= @order.customer.street_num %></p>
            <P><%= @order.customer.building %></p>
          </div>  
        </div>  

         <div class="customer__detail">
          <P>送り先住所：</p><%= "送り先住所" %>
        </div>

      
        <div class="customer__detail">
          <P>TEL：</p><%= @order.customer.tel %>
        </div>
        <div class="customer__detail">
          <P>Mail：</p><%= @order.customer.email %>
        </div>
        <div class="customer__detail">
          <P>備考：</p><%= @order.memo %>
        </div>

        <div class="prototype__manage">
          <%= link_to "一覧に戻る", orders_path, class: :prototype__btn %>
        </div>
        
      </div>
      <div class="prototype__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
          <%# <%= form_with local: true do |f|%>
            <div class="field">
              <%# <%= f.label :hoge, "コメント" %><br />
              <%# <%= f.text_field :hoge %>
            </div>
            <div class="actions">
              <%# <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <%# <% end %> 
        <%# // ログインしているユーザーには上記を表示する %>
        <ul class="comments_lists">
          <%# 投稿に紐づくコメントを一覧する処理を記述する %>
            <li class="comments_list">
              <%# <%= " コメントのテキスト "%>
              <%# <%= link_to "（ ユーザー名 ）", root_path, class: :comment_user %>
            </li>
          <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
        </ul>
      </div>
    </div>
  </div>
</main>
