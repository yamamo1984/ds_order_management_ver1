<%= form_with model: @order, url: add_orders_path, local: true do |f| %>
  <div class="field">

  <h3>注文情報の入力</h3> 
    <%= f.label :order_num, "注文番号" %><br />
    <%= f.text_field :order_num %>
  </div>
  <P>購入者（選択してください）</p>
  <div class="field"> 
   <%= f.collection_select(:customer_id, Customer.all, :id, :company, {}, {class:"place-select"}) %> 
  </div>


  <div class="field">
    <%= f.label :purchase_num, "数量" %><br />
    <%= f.text_field :purchase_num %>
  </div>

  <div class="field">
    <%= f.label :price, "価格" %><br />
    <%= f.text_field :price %>
  </div>

  <h3>配送住所の選択</h3> 


  <div class="field"> 
   <%= f.collection_select(:ship_address_id, ShipAddress.all, :id, :company, {}, {class:"place-select"}) %> 
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>