<%= form_with model: @order, url: add_orders_path, local: true do |f| %>
  <div class="row">
    <div class="col-md-4 bg-secondary text-white border">注文番号</div>
    <div class="col-md-4 bg-secondary text-white border">購入者</div>
  </div>  
  <div class="row">
    <div class="col-md-4"><%= f.text_field :order_num, class: "form-control", placeholder: "注文番号" %></div>
    <div class="col-md-4"><%= f.collection_select(:customer_id, Customer.all, :id, :company, {:include_blank => "購入者を選択してください"}, { class:"btn btn-outline-secondary dropdown-toggle dropdown-toggle-split"}) %> </div>
  </div>  
  <div class="row">
    <div class="col-md-8 bg-secondary text-white border">商品検索</div>
  </div>  
  <div class="row" id= "items"> 
    <div class="item-field" id="item-field-">
      <div class="row" id="parent-div-">
        <div class="col-md-3 "><%= f.text_field :item_id, id: "item-name", class: "item-name", placeholder: "商品名を入力", autocomplete: "off" %>
          <div class="row" id="search-result-"></div>
          <div class="row"><%= f.hidden_field :item_id, id: "item-id", name: "item_ids[]" %></div>
        </div> 
      </div>  
    </div>  
  </div>
  <div class="row" id="order_items">
    <div class="col-md-3 bg-secondary text-white border">商品番号</div>
    <div class="col-md-3 bg-secondary text-white border">商品名（キーワード入力）</div>
    <div class="col-md-3 bg-secondary text-white border">価格</div>
    <div class="col-md-2 bg-secondary text-white border">数量</div>
    <div class="col-md-1 bg-secondary text-white border">操作</div>
  </div>  

  <div class="row">
    <div class="col-md-8 bg-secondary text-white border">合計額</div>
  </div> 
    <div class="row">
      <%= f.label :price, "価格" %><br />
      <%= f.text_field :price %>
    </div>
    
  





  
<h3>配送住所の選択</h3> 


  <div class="field"> 
   <%= f.collection_select(:ship_address_id, ShipAddress.all, :id, :company, {}, {class:"place-select"}) %> 
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>