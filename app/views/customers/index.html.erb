<main class="main">
  <div class="inner">
       <% if user_signed_in? %>
        <div class="greeting"> 
        こんにちは、
        <%= link_to current_user.last_name + current_user.first_name , root_path, class: :greeting__link%>
        さん
        </div>
        <% end %>

<h1>顧客一覧</h1>
<%= link_to "新規顧客", new_customer_path , class: :nav__btn %>
<div class="contents row">
  <% @customer.each do |customer| %>  
      <div class="more">
       <%# <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
        <li>
          <%= link_to "詳細", customer_path(customer.id), method: :get, class: :link__btn %>
        </li>
        </ul>
      </div>
      <% if customer.company == "" %>
      <p><%= customer.last_name + customer.first_name %></p>
      <% else %>
      <p><%= customer.company %></p>
      <% end %>
  
  <% end %>
</div>
</main>
